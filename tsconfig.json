{
  "compilerOptions": {
    "outDir": "./lib",
    "types": ["node", "mocha"],
    "allowJs": true,
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "sourceRoot": "src"
  },
  "include": [
    "./src/**/*"
  ],
  "files": [
    "./node_modules/@types/node/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
